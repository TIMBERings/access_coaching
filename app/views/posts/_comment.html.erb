<div class='panel panel-default'>
  <div class='panel-body small'>
    <%= comment.content %>
  </div>
  <div class='panel-footer'>
    <div class='row vcenter'>
      <div class='col-xs-6 small'>
        <%= comment.author.full_name %>
      </div>
      <div class='col-xs-6 text-right'>
        <%= link_to vote_comment_path(comment, {direction: 'liked'}) do %>
          <%= content_tag(:span, '', class: "vote-arrow glyphicon glyphicon-arrow-up #{'voted-for' if (current_user.voted_for?(comment) && current_user.voted_as_when_voted_for(comment))}", 'aria-hidden' => "true") %>
        <% end %>
        <strong class='large-text'><%= comment.total_votes %></strong>
        <%= link_to vote_comment_path(comment, {direction: 'disliked'}) do %>
          <%= content_tag(:span, '', class: "vote-arrow glyphicon glyphicon-arrow-down #{'voted-for' if (current_user.voted_for?(comment) && !current_user.voted_as_when_voted_for(comment))}", 'aria-hidden' => "true") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
