<div class="page-header">
  <h1><%=t ".title", default: "Sign Up" %></h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true %>
    <%= f.input :last_name, required: true %>
    <%= f.input :birth_date, as: :date, start_year: Date.today.year - 13,
                      end_year: Date.today.year - 110,
                      order: [:month, :day, :year],
                      label: "Date of birth"  %>
    <%= f.input :email, required: true %>
    <%= f.input :password, autocomplete: "off", required: true %>
    <%= f.input :password_confirmation, required: true %>
    <label class='control-label'> Roles </label>
    <%= f.collection_radio_buttons :role, [[:athlete, 'Athlete'] ,[:coach, 'Coach']], :first, :last, {:item_wrapper_class => 'radio'}%>
    <label class='control-label'> Sports </label>
    <%= f.collection_check_boxes :sport_ids, Sport.all, :id, :name, {:item_wrapper_class => 'checkbox'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Register" %>
  </div>
<% end %>
