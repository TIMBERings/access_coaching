<%= form_for @comment, params: {post: @post.id}, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-inputs">

    <div class="form-group">
      <%= f.label :content, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :content, :class => 'text-field form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    comments_path, :class => 'btn btn-default' %>
      </div>
    </div>
    <%= hidden_field_tag('comment[post_id]', @post.id) %>
    <%= hidden_field_tag('comment[author_id]', current_user.id) %>
  </div
<% end %>
